<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_all"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/setting"
        android:textColor="@color/cfffff"
        android:textSize="50sp" />

    <LinearLayout
        android:id="@+id/ll_container_base_url"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp">

        <TextView
            android:id="@+id/tv_base_url"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="@string/base_url"
            android:textSize="20sp" />

        <EditText
            android:inputType="textUri"
            android:imeOptions="actionDone"
            android:id="@+id/et_base_url"
            android:layout_width="0dp"
            android:maxLines="1"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_container_timer"
        android:layout_below="@+id/ll_container_base_url"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/timer_screensaver"
            android:textSize="20sp" />

        <EditText
            android:imeOptions="actionDone"
            android:id="@+id/et_timer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text"
            android:hint="@string/in_second"
            android:inputType="number"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/ll_container_welcome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/ll_container_base_url"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="@string/welcome_text"
            android:textSize="20sp" />

        <EditText
            android:inputType="text"
            android:imeOptions="actionDone"
            android:id="@+id/et_welcome"
            android:layout_width="0dp"
            android:maxLines="3"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_container_id_meja"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_container_timer"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp">

        <TextView
            android:id="@+id/tv_id_meja"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="@string/id_meja"
            android:textSize="20sp" />

        <EditText
            android:inputType="text"
            android:imeOptions="actionDone"
            android:id="@+id/et_no_meja"
            android:layout_width="0dp"
            android:maxLines="1"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text" />

    </LinearLayout>

    <Button
        android:id="@+id/b_save_setting"
        style="@style/ButtonStandard"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@drawable/btn_round"
        android:text="@string/save"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_back" />

</RelativeLayout>